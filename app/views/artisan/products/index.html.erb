<h1 class="mb-4">Your Products</h1>

<div class="mb-3">
  <%= link_to "Add Product", new_artisan_product_path, class: "btn btn-primary" %>
</div>

<div class="list-group">
  <% @products.each do |product| %>
    <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center border-0 pb-3">
      <div class="d-flex align-items-center">
        <% if product.photo.attached? %>
          <%= image_tag product.photo.variant(resize_to_limit: [60, 60]), class: "rounded me-3", alt: product.title %>
        <% end %>
        <div>
          <h5 class="mb-1"><%= product.title %></h5>
          <small>$<%= product.price %></small>
        </div>
      </div>
      <div>
        <%= link_to "Edit", edit_artisan_product_path(product), class: "btn btn-sm btn-outline-secondary me-2" %>
        <%= link_to "Delete", artisan_product_path(product), method: :delete, class: "btn btn-sm btn-outline-danger" %>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-4">
  <%= link_to "Back", artisan_root_path, class: "btn btn-secondary" %>
</div>
