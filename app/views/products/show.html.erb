<div class="container my-5">
  <div class="row">
    <div class="col-md-6">
      <% if @product.photo.attached? %>
        <%= image_tag @product.photo.variant(resize_to_limit: [600, 600]), class: "img-fluid rounded shadow-sm" %>
      <% else %>
        <p>No image available</p>
      <% end %>
    </div>
    <div class="col-md-6">
      <h2 class="mb-3"><%= @product.title %></h2>
      <h4 class="text-success mb-4">$<%= @product.price %></h4>
       <p><strong>Category:</strong> <%= @product.category_list %></p>
      <p>This handcrafted product is made with care and passion. Perfect for gifting or personal use.</p>
      <%= form_with url: cart_items_path, method: :post, local: true do |f| %>
        <%= hidden_field_tag :product_id, @product.id %>
        <div class="mb-3">
          <%= label_tag :quantity, "Quantity", class: "form-label" %>
          <%= number_field_tag :quantity, 1, min: 1,max: 20, class: "form-control w-25" %>
        </div>
        <%= submit_tag "Add to Cart", class: "btn btn-primary" %>
      <% end %>
      <div class="mt-4">
        <%= link_to "Back to Products", root_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-12">
      <h3>Description</h3>
      <p><%= @product.description %></p>
    </div>
  </div>
</div>
