<%- # ─── Log in ────────────────────────────────────────────────────── -%>
<%- if controller_name != 'sessions' -%>
  <% if controller_path.start_with?('artisan/') %>
    <%= link_to "Log in as Artisan", new_artisan_session_path %><br/>
  <% elsif controller_path.start_with?('buyer/') %>
    <%= link_to "Log in as Buyer", new_buyer_session_path %><br/>
  <% else %>
    <%= link_to "Log in", new_user_session_path %><br/>
  <% end %>
<% end -%>

<%- # ─── Sign up ───────────────────────────────────────────────────── -%>
<%- if controller_name != 'registrations' -%>
  <% if controller_path.start_with?('artisan/') %>
    <%= link_to "Sign up as Artisan", new_artisan_registration_path %><br/>
  <% elsif controller_path.start_with?('buyer/') %>
    <%= link_to "Sign up as Buyer", new_buyer_registration_path %><br/>
  <% end %>
<% end -%>

<%- # ─── Forgot password? ──────────────────────────────────────────── -%>
<%- if devise_mapping.recoverable? &&
      controller_name != 'passwords' &&
      controller_name != 'registrations' -%>
  <% if controller_path.start_with?('artisan/') %>
    <%= link_to "Forgot your password?", new_user_password_path %><br/>
  <% elsif controller_path.start_with?('buyer/') %>
    <%= link_to "Forgot your password?", new_user_password_path %><br/>
  <% else %>
    <%= link_to "Forgot your password?", new_user_password_path %><br/>
  <% end %>
<% end -%>
